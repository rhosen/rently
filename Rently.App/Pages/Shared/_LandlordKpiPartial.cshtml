@model Rently.App.Models.KpiModel
@{
}
<!-- KPI Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Properties</h5>
                <p class="card-text display-6">@Model.TotalProperties</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Total Units</h5>
                <p class="card-text display-6">@Model.TotalUnits</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Pending Payments</h5>
                <p class="card-text display-6">$@Model.TotalPendingPayments</p>
            </div>
        </div>
    </div>
</div>