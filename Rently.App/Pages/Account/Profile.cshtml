@page
@model Rently.App.Pages.Account.ProfileModel
@{
}

@{
    ViewData["Title"] = "Profile";
    Layout = "_AccountLayout";
}


<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    @* <partial name="_AccountKpiPartial" model="new Models.KpiModel()" /> *@
    <!-- ✅ Shared Form for Create/Edit -->
    <div class="container mt-4">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <ul class="nav nav-tabs" id="userTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="properties-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab">Profile</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="units-tab" data-bs-toggle="tab" data-bs-target="#change-password" type="button" role="tab">Password</button>
            </li>
        </ul>

        <div class="tab-content pt-3" id="userTabsContent">
            <div class="tab-pane fade show active" id="profile" role="tabpanel">
                <form method="post" asp-page-handler="UpdateProfile">
                    <!-- Name + Email in one row -->
                    <div class="row g-4">
                        <div class="col-md-4">
                            <label asp-for="Account.FirstName" class="form-label small text-muted">First Name</label>
                            <input asp-for="Account.FirstName" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="Rubel" />
                            <span asp-validation-for="Account.FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Account.LastName" class="form-label small text-muted">Last Name</label>
                            <input asp-for="Account.LastName" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="Hosen" />
                            <span asp-validation-for="Account.LastName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Account.Email" class="form-label small text-muted">Email</label>
                            <input asp-for="Account.Email" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="rubel@example.com" readonly />
                            <span asp-validation-for="Account.Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Phone + DOB -->
                    <div class="row g-4 pt-4">
                        <div class="col-md-6">
                            <label asp-for="Account.PhoneNumber" class="form-label small text-muted">Phone Number</label>
                            <input asp-for="Account.PhoneNumber" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="+880..." />
                            <span asp-validation-for="Account.PhoneNumber" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Account.DateOfBirth" class="form-label small text-muted">Date of Birth</label>
                            <input asp-for="Account.DateOfBirth" type="date" class="form-control border-0 border-bottom rounded-0 shadow-sm" />
                            <span asp-validation-for="Account.DateOfBirth" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Address row (Street) -->
                    <div class="row g-4 pt-4">
                        <div class="col-md-12">
                            <label asp-for="Account.StreetAddress" class="form-label small text-muted">Street Address</label>
                            <input asp-for="Account.StreetAddress" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="123 Main St." />
                            <span asp-validation-for="Account.StreetAddress" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- City + State + Postal + Country -->
                    <div class="row g-4 pt-4">
                        <div class="col-md-3">
                            <label asp-for="Account.City" class="form-label small text-muted">City</label>
                            <input asp-for="Account.City" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="City" />
                            <span asp-validation-for="Account.City" class="text-danger small"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Account.StateOrProvince" class="form-label small text-muted">State</label>
                            <input asp-for="Account.StateOrProvince" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="State" />
                            <span asp-validation-for="Account.StateOrProvince" class="text-danger small"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Account.PostalCode" class="form-label small text-muted">Postal Code</label>
                            <input asp-for="Account.PostalCode" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="12345" />
                            <span asp-validation-for="Account.PostalCode" class="text-danger small"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Account.Country" class="form-label small text-muted">Country</label>
                            <input asp-for="Account.Country" class="form-control border-0 border-bottom rounded-0 shadow-sm" placeholder="Bangladesh" />
                            <span asp-validation-for="Account.Country" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-5 d-flex gap-2">
                        <button type="submit" class="btn btn-dark px-4">Update</button>
                    </div>
                </form>
            </div>
            <div class="tab-pane fade" id="change-password" role="tabpanel">
                <form method="post" asp-page-handler="ChangePassword">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <label asp-for="ChangePasswordDto.CurrentPassword" class="form-label small text-muted">Current Password</label>
                            <input asp-for="ChangePasswordDto.CurrentPassword" class="form-control border-0 border-bottom rounded-0 shadow-sm" type="password" placeholder="Enter current password" />
                            <span asp-validation-for="ChangePasswordDto.CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="ChangePasswordDto.NewPassword" class="form-label small text-muted">New Password</label>
                            <input asp-for="ChangePasswordDto.NewPassword" class="form-control border-0 border-bottom rounded-0 shadow-sm" type="password" placeholder="Enter new password" />
                            <span asp-validation-for="ChangePasswordDto.NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="ChangePasswordDto.ConfirmPassword" class="form-label small text-muted">Confirm New Password</label>
                            <input asp-for="ChangePasswordDto.ConfirmPassword" class="form-control border-0 border-bottom rounded-0 shadow-sm" type="password" placeholder="Re-enter new password" />
                            <span asp-validation-for="ChangePasswordDto.ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-5 d-flex gap-2">
                        <button type="submit" class="btn btn-dark px-4">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

